doctype html
html lang="en" 
  head
    meta charset="utf-8" /
    meta content="width=device-width, initial-scale=1.0" name="viewport" /
    title= content_for?(:title) ? yield(:title) : "SO clone by misa"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application", "vendor/modernizr", "nested_form"
    = csrf_meta_tags
  body
    topbar= render 'layouts/topbar'
    header= render 'layouts/header'
      
    .row
      = render 'layouts/flash'
      .large-10.columns= yield
      .large-2.columns
        = render 'layouts/sidebar'

    footer= render 'layouts/footer'